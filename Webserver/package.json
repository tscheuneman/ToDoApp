  ],
  "license": "MIT",
  "dependencies": {
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jest": "^25.1.0",
    "moment": "^2.24.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "pg": "^7.18.1",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.13",
    "sha.js": "^2.4.11",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/node": "^12.0.10",
